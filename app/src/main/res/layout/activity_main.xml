<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Almacenamiento y Hora"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvailableSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewAvailableSpaceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espacio Disponible"
                android:textSize="18sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/textViewAvailableSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculando..."
                android:textSize="20sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTotalSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardAvailableSpace"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewTotalSpaceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espacio Total"
                android:textSize="18sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/textViewTotalSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculando..."
                android:textSize="20sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardTotalSpace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="32sp"
        android:textColor="#333333"/>

    <Button
        android:id="@+id/buttonRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_below="@id/textViewTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
